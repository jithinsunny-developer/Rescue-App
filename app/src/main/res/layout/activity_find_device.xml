<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FindDeviceActivity"
    android:background="@color/color2">

    <android.support.v7.widget.Toolbar
        android:id="@+id/find_device_toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rescue"
                android:id="@+id/toolbar_title"
                android:fontFamily="@font/star1"
                android:textSize="20sp" />
        </LinearLayout>

    </android.support.v7.widget.Toolbar>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/find_device_toolbar"
        android:text=""
        android:textColor="@android:color/holo_red_dark"
        android:gravity="center"
        android:id="@+id/find_device_bt_status_show"
        android:fontFamily="@font/ccalibri"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/find_device_bt_status_show"
        android:layout_above="@id/show_paired_devices_btn"
        android:id="@+id/paired_devices_list_view"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color3"
        android:textColor="@android:color/white"
        android:text="Show Paired Devices"
        android:fontFamily="@font/calibrib"
        android:textSize="20sp"
        android:id="@+id/show_paired_devices_btn"/>
</RelativeLayout>