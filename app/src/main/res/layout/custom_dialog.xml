<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color2"
    android:padding="10dp"
    android:orientation="vertical">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Vibration Time (Seconds)"
        android:textColorHint="@color/color1"
        android:textColor="@color/color1"
        android:backgroundTint="@color/color1"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:inputType="number"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/dialog_set_vibration"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Send Duration Time (Seconds)"
        android:textColorHint="@color/color1"
        android:textColor="@color/color1"
        android:backgroundTint="@color/color1"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:inputType="number"
        android:id="@+id/dialog_set_send_duration"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set"
            android:background="@drawable/round_background0"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:id="@+id/dialog_set_btn"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:background="@drawable/round_background0"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:id="@+id/dialog_cancel_btn"/>
    </LinearLayout>
</LinearLayout>